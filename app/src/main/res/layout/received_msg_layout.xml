<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.andro id.com/apk/res-auto"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/received_msg"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/u_details"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/msg_u_image"
                android:layout_width="30dp"
                app:civ_border_width="2dp"
                android:src="@drawable/github_600969"
                app:civ_border_color="@android:color/black"
                android:layout_height="30dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/msg_u_name"
                android:singleLine="true"
                android:text="@string/app_name"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msg_text"
            android:layout_marginStart="35dp"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:text="Lorem ispum ya ipsum Ipsum Lorem suck some to"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:layout_below="@id/u_details"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:id="@+id/timestamp_tv"
            android:layout_below="@id/msg_text"
            android:text="Today at 7:45 PM"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>
</RelativeLayout>