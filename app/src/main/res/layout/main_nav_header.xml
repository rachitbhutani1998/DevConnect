<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:contentDescription="layout" android:layout_width="match_parent"
        android:layout_height="56dp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/nav_header_main"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_width="60dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_marginStart="10dp"
            android:contentDescription="ImageProfile"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            android:src="@drawable/github_600969"
            app:civ_border_color="@android:color/white"/>

    <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:text="Rachit Bhutani"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_toEndOf="@id/user_profile_image"/>

    <ImageButton
            android:id="@+id/sign_out_btn"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:background="?android:selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>